        function searchFunction() {
            $.get('/EmployeesWorkShifts/getEmployeesBysearch', { DepartmentId: $("#DepartmentId").val(), search: document.getElementById("search").value }, function (data) {
                $("#databody").empty();
                $.each(data, function (key, value) {
                    $("#databody").append('<tr><td>' + value["Code"] + '</td><td>' + value["Name"] + '</td><td><input type="hidden" id="emp[' + key + '].Id" name="emp[' + key + '].Id" value="' + value["Id"] + '"/><input type="checkbox" class="form-check-input p-1" id="emp[' + key + '].Att" name="emp[' + key + '].Att" /></td></tr>');
                });
            });
        }

        $("#DepartmentId").change(function () {
            $.get('/EmployeesWorkShifts/getEmployees', { DepartmentId: $("#DepartmentId").val() }, function (data) {
                $("#databody").empty();
                $.each(data, function (key, value) {
                    $("#databody").append('<tr><td>' + value["Code"] + '</td><td>' + value["Name"] + '</td><td><input type="hidden" id="emp[' + key + '].Id" name="emp[' + key + '].Id" value="' + value["Id"] + '"/><input type="checkbox" class="form-check-input p-1" id="emp[' + key + '].Att" name="emp[' + key + '].Att" /></td></tr>');
                });
            });
        });

        $("#All").change(function () {

            if (document.getElementById('All').checked) {
                var rowCount = $('#datatable1 tr').length;

                for (var i = 0; i < rowCount; i++) {
                    document.getElementById("emp[" + i + "].Att").checked = true;
                }
            }
            else {
                var rowCount = $('#datatable1 tr').length;
                for (var i = 0; i < rowCount; i++) {
                    document.getElementById("emp[" + i + "].Att").checked = false;
                }
            }
        });
        $.get('/EmployeesWorkShifts/getEmployees', { DepartmentId: $("#DepartmentId").val() }, function (data) {
            $("#databody").empty();

            $.each(data, function (key, value) {
                $.get('/EmployeesWorkShifts/getEmployeesWorkShifts', { EmployeeId: value["Id"], DepartmentId: $("#DepartmentId").val(), WorkShiftId: $("#WorkShiftId").val(), StudyYearId: $("#StudyYearId").val() }, function (data1) {
                    if (data1 == "0") {
                        $("#databody").append("<tr><td>" + value["Code"] + "</td><td>" + value["Name"] + " </td><td><input type='hidden' id='emp[" + key + "].Id' name='emp[" + key + "].Id' value='" + value["Id"] + "'/><input type='checkbox' class='form-check-input p-1' id='emp[" + key + "].Att' name='emp[" + key + "].Att' /></td></tr>")
                    }
                    else {
                        $("#databody").append("<tr><td>" + value["Code"] + "</td><td>" + value["Name"] + " </td><td><input type='hidden' id='emp[" + key + "].Id' name='emp[" + key + "].Id' value='" + value["Id"] + "'/><input type='checkbox' class='form-check-input p-1' id='emp[" + key + "].Att' name='emp[" + key + "].Att' checked /></td></tr>")
                    }
                });
            });

            var mod1 = document.getElementById('StudyYearId').value;
            var mod2 = document.getElementById('DepartmentId').value;
            var mod3 = document.getElementById('WorkShiftId').value;

            document.getElementById('StudyYearId').disabled = true;
            document.getElementById('DepartmentId').disabled = true;
            document.getElementById('WorkShiftId').disabled = true;


            $('#empp').append("<input type='hidden' id='StudyYearId' name='StudyYearId' value='" + mod1 + "'/>");
            $('#empp').append("<input type='hidden' id='DepartmentId' name='DepartmentId' value='" + mod2 + "'/>");
            $('#empp').append("<input type='hidden' id='WorkShiftId' name='WorkShiftId' value='" + mod3 + "'/>");

        });


    </script>
}