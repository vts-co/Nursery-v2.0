@model IEnumerable<NurseryProject.Dtos.StudyClasses.StudyClassesDto>
@using NurseryProject.Utilities
@{
    ViewBag.Title = "ادارة الفصول الدراسية ";
}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">  </h2>
            <p class="col-auto">
                @Url.Create()
            </p>
        </div>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped dt-responsive  nowrap w-100">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("العام الدراسي")
                    </th>
                    <th>
                        @Html.DisplayName("الفصل الدراسي")
                    </th>
                    <th>
                        @Html.DisplayName("ملاحظات")
                    </th>
                    <th>
                        @Html.DisplayName("عمليات")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudyYearName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        @Url.Edit(routeValues: new { id = item.Id })
                        @Url.Delete(routeValues: new { id = item.Id })
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>