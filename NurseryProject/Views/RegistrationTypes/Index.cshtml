@model IEnumerable<NurseryProject.Models.RegistrationType>
@using NurseryProject.Utilities
@{
    ViewBag.Title = "ادارة حالات قيد الطلاب ";

}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">  </h2>
            <p class="col-auto">
                @Url.Create()
            </p>
        </div>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped dt-responsive  nowrap w-100">
            <thead class="bg-soft-primary">
                <tr>
                    <th>
                        @Html.DisplayName("اسم الحالة")
                    </th>
                    <th>
                        @Html.DisplayName("ملاحظات")
                    </th>
                    <th>
                        @Html.DisplayName("عمليات")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        @if (item.Id == Guid.Parse("E31AC343-47DA-4DFE-8970-E1719DEEC869"))
                        {
                            <td>
                                @Url.Edit(routeValues: new { id = item.Id })
                            </td>
                        }
                        else
                        {
                            <td>
                                @Url.Edit(routeValues: new { id = item.Id })
                                @Url.Delete(routeValues: new { id = item.Id })
                            </td>
                        }

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>