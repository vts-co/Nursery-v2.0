@model IEnumerable<NurseryProject.Dtos.StudentExamDegrees.StudentExamDegreesDto>
@using NurseryProject.Utilities
@{
    ViewBag.Title = "تسجيل درجات الاختبار للطلاب ";

}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">  </h2>
            <p class="col-auto">
                @Url.Create()
            </p>
        </div>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped dt-responsive  nowrap w-100">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayName("الفرع ")
                    </th>
                    <th>
                        @Html.DisplayName("نوع الدراسة ")
                    </th>
                    <th>
                        @Html.DisplayName("الصف الدراسي ")
                    </th>
                    <th>
                        @Html.DisplayName("الفصل")
                    </th>
                    <th>
                        @Html.DisplayName("الاختبار")
                    </th>
                    <th>
                        @Html.DisplayName("الطلاب")
                    </th>
                    <th>
                        @Html.DisplayName("عمليات")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.StudyPlaceName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudyTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LevelName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExamName)
                        </td>
                        
                        <td>

                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>الطالب</th>
                                        <th>درجة الاختبار</th>
                                        <th>التاريخ</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item2 in item.Students)
                                    {
                                    <tr>
                                        <td>@item2.StudentName</td>
                                        <td>@item2.TotalDegree</td>
                                        <td>@item2.Date</td>

                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </td>
                        <td>
                            @Url.Edit(routeValues: new { id = item.Id })
                            @Url.Delete(routeValues: new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>