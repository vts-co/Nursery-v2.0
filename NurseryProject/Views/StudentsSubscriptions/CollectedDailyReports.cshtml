@using NurseryProject.Utilities
@{
    ViewBag.Title = " تقرير التحصيل اليومي للطلاب ";
    ViewBag.MainPage = "إشتراكات الطلاب ";
    var paid = 0;
    var remain = 0;

}
@using (Html.BeginForm("CollectedDailyReports", "StudentsSubscriptions", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="card">
        <div class="card-header">
            <div class="row justify-content-between">
                <h4 class="col-auto">@ViewBag.Title</h4>
                @Url.BackToList()
            </div>
        </div>
        <div class="card-body">
            <div class="row">
              
                <div class="form-group mb-3 col-sm-4">
                    @Html.Label("من تاريخ ", htmlAttributes: new { @class = "control-label" })
                    <div class="col-12">
                        @Html.Editor("Date", new { htmlAttributes = new { @class = "form-control", type = "date", required = "required" } })
                        @Html.ValidationMessage("Date", "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group mb-3 col-sm-4">
                    @Html.Label("الي تاريخ ", htmlAttributes: new { @class = "control-label" })
                    <div class="col-12">
                        @Html.Editor("Date2", new { htmlAttributes = new { @class = "form-control", type = "date", required = "required" } })
                        @Html.ValidationMessage("Date2", "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row justify-content-end">
                <button type='submit' class='btn btn-primary  waves-effect waves-light px-3 m-1 col-12 col-md-auto'><i class='fas fa-search me-1'></i>عرض</button>

            </div>
        </div>
    </div>
}
@if (ViewBag.Reports != null)
{
    <div class="card">
        <div class="card-header">
            تقرير التحصيل اليومي للطلاب
        </div>
        <div class="card-body">
            <table id="datatable" class="table table-striped dt-responsive  nowrap w-100">
                <thead class="bg-soft-primary">
                    <tr>
                       
                    
                        <th>
                            @Html.DisplayName(" الاشتراك ")
                        </th>
              
                        <th>
                            @Html.DisplayName("المبلغ  ")
                        </th>
                       

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Reports)
                    {
                        <tr>

                            <
                            <td>
                                @item.Name
                            </td>
                          

                            <td>
                                @item.Amount جنيه
                            </td>
                          

                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <div class="card-footer">
            <div class="row justify-content-center">
                الاجمالي : @ViewBag.Total جنيه

            </div>
        </div>

    </div>
}


@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
            var now = new Date();
            now.setMinutes(now.getMinutes() - now.getTimezoneOffset());

            if (document.getElementById('Date').value == "") {
                document.getElementById('Date').value = now.toISOString().slice(0, 10);
            }
            if (document.getElementById('Date2').value == "") {
                document.getElementById('Date2').value = now.toISOString().slice(0, 10);
            }
        
    </script>
}
