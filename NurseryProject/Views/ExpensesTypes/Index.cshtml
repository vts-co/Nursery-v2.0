@model IEnumerable<NurseryProject.Dtos.ExpensesTypes.ExpensesTypesDto>
@using NurseryProject.Utilities
@{
    ViewBag.Title = "ادارة انواع المصروفات ";

}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">  </h2>
            <p class="col-auto">
                @Url.Create()
            </p>
        </div>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped dt-responsive  nowrap w-100">
            <thead class="bg-soft-primary">
                <tr>

                    <th>
                        @Html.DisplayName("نوع المصروف")
                    </th>
                    <th>
                        @Html.DisplayName("البيان")
                    </th>
                    <th>
                        @Html.DisplayName("ملاحظات")
                    </th>
                    <th>
                        @Html.DisplayName("عمليات")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    @if (item.Id == Guid.Parse("20A6A59E-088E-4E6A-AA27-8A15F051B1DE") || item.Id == Guid.Parse("A41366FB-D326-4723-A630-F81E38D5ED23"))
                    {
                        <td></td>
                    }
                    else
                    {
                        <td>
                            @Url.Edit(routeValues: new { id = item.Id })
                            @Url.Delete(routeValues: new { id = item.Id })
                        </td>
                    }

                </tr>
                }
            </tbody>
        </table>

    </div>
</div>