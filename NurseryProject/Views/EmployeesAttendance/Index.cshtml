@model IEnumerable<NurseryProject.Dtos.EmployeesAttendance.EmployeesAttendanceDto>
@using NurseryProject.Utilities
@{
    ViewBag.Title = "ادارة غياب الموظفين  ";
}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">  </h2>
            <p class="col-auto">
                @Url.Create()
            </p>
        </div>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped dt-responsive  nowrap w-100">
            <thead class="bg-soft-primary">
                <tr>
                    
                    <th>
                        @Html.DisplayName("العام الدراسي ")
                    </th>
                    <th>
                        @Html.DisplayName("الادارة")
                    </th>
                    <th>
                        @Html.DisplayName("الفترة")
                    </th>
                    @*<th>
                        @Html.DisplayName("حضور ")
                    </th>*@
                    <th>
                        @Html.DisplayName("عدد موظفي الفترة ")
                    </th>
                    <th>
                        @Html.DisplayName("عدد الحضور ")
                    </th>
                    <th>
                        @Html.DisplayName("التاريخ ")
                    </th>
                    <th>
                        @Html.DisplayName("عمليات")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.StudyYearName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkShiftName)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.IsAttend)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.All)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Attend)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>

                    <td>
                        @Url.Edit(routeValues: new { id = item.Id })
                        @Url.Delete(routeValues: new { id = item.Id })
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            