@if (ViewBag.Revenues != null)
{
    <div class="card">
        <div class="card-header">
            تقرير الايرادات
        </div>
        <div class="card-body">
            <table id="datatable" class="table table-striped dt-responsive  nowrap w-100 table-bordered">
                <thead class="bg-soft-primary">
                    <tr>
                        <th>
                            @Html.DisplayName("نوع الايراد الرئيسي")
                        </th>
                        <th>
                            @Html.DisplayName("نوع الايراد")
                        </th>
                        <th>
                            @Html.DisplayName("قيمة الايراد")
                        </th>
                        <th>
                            @Html.DisplayName("الموظف")
                        </th>
                        <th>
                            @Html.DisplayName("التاريخ")
                        </th>
                        <th>
                            @Html.DisplayName("ملاحظات")
                        </th>
                        <th>
                            @Html.DisplayName("عمليات")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Revenues)
                    {
                        <tr>
                            <td>
                                @item.RevenueTypeParentName
                            </td>
                            <td>
                                @item.RevenueTypeName
                            </td>
                            <td>
                                @item.Value
                            </td>
                            <td>
                                @item.EmployeeName
                            </td>
                            <td>
                                @item.Date.Date.ToString("yyyy-MM-dd")
                            </td>
                            <td>
                                @item.Notes
                            </td>
                            <td>
                                @Url.Edit(routeValues: new { id = item.Id })
                                @Url.Delete(routeValues: new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="text-center">
                    <tr>
                        <td>
                            الاجمالي : @ViewBag.Total جنيه

                        </td>
                    </tr>
                </tfoot>
            </table>

        </div>
    </div>
}
@section scripts{
    <script>
        $("#RevenueTypeParentId").change(function () {
            $.get('/Revenues/getRevenuesTypesReport', { Id: $("#RevenueTypeParentId").val() }, function (data) {
                $("#RevenueTypeId").empty();
                $("#RevenueTypeId").append("<option value=''>--اختر--</option>")
                $.each(data, function (key, value) {
                    $("#RevenueTypeId").append("<option value=" + value["Id"] + ">" + value["Name"] + "</option>")
                });
            });
        });
        $("#StudyPlaceId").change(function () {
            $.get('/Revenues/getClassesReport', { Id: $("#StudyPlaceId").val() }, function (data) {
                $("#ClassId").empty();
                $("#ClassId").append("<option value=''>--اختر--</option>")
                $.each(data, function (key, value) {
                    $("#ClassId").append("<option value=" + value["Id"] + ">" + value["Name"] + "</option>")
                });
            });
        });
    </script>
}