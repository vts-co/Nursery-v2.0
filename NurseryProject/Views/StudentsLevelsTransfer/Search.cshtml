@model IEnumerable<NurseryProject.Dtos.StudentsClass.StudentsClassDto>
@using NurseryProject.Utilities
@{
    ViewBag.Title = " ادارة نقل الطالب من صف لصف  ";
}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">  </h2>
            <p class="col-auto">
                <button onclick="excel()" class='btn btn-soft-primary  waves-effect waves-light px-4'><i class="fas fa-list-alt me-3"></i> استيراد البيانات</button>
            </p>
        </div>
    </div>
    @using (Html.BeginForm("Search", "StudentsLevelsTransfer", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="card-body">
            <div class="row mt-3">
                <div class="form-group mb-3 col-sm-10">
                    @Html.Label("الطالب", htmlAttributes: new { @class = "control-label text-center mb-2" })

                    <div class="col-12">
                        @Html.DropDownList("StudentId", null, "--اختر--", new { @class = "form-control searchable", required = "required" })
                        @Html.ValidationMessage("StudentId", "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row justify-content-end">
                <button type='submit' class='btn btn-primary  waves-effect waves-light px-3 m-1 col-12 col-md-auto'><i class='fas fa-search me-1'></i>عرض</button>
            </div>
        </div>
    }
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            @using (Html.BeginForm("ImportExcel", "StudentsLevelsTransfer", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-body">
                    <div class="row mt-5">
                        @Html.Label("البيانات الدراسية", htmlAttributes: new { @class = "control-label text-center mb-3 bg-warning" })
                        <hr />
                        <div class="form-group mb-3 col-sm-6">
                            @Html.Label("العام الدراسي", htmlAttributes: new { @class = "control-label" })
                            <div class="col-12">
                                @Html.DropDownList("StudyYearId", null, "--اختر--", new { @class = "form-control", required = "required" })
                                @Html.ValidationMessage("StudyYearId", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group mb-3 col-sm-6">
                            @Html.Label("نوع الدراسة", htmlAttributes: new { @class = "control-label" })
                            <div class="col-12">
                                @Html.DropDownList("StudyTypeId", null, "--اختر--", new { @class = "form-control", required = "required" })
                                @Html.ValidationMessage("StudyTypeId", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group mb-3 col-sm-6">
                            @Html.Label(" الصف المحول اليه ", htmlAttributes: new { @class = "control-label" })
                            <div class="col-12">
                                @Html.DropDownList("LevelId", null, "--اختر--", new { @class = "form-control", required = "required" })
                                @Html.ValidationMessage("LevelId", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group mb-3 col-sm-6">
                            @Html.Label("الفصل", htmlAttributes: new { @class = "control-label" })
                            <div class="col-12">
                                @Html.DropDownList("ClassId", null, "--اختر--", new { @class = "form-control", required = "required" })
                                @Html.ValidationMessage("ClassId", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group mb-3 col-sm-12 text-center bg-warning">طريقة الدفع </div>
                        <hr />
                        <div class="form-group mb-3 col-sm-12">
                            @Html.Label("طريقة الاشتراك", htmlAttributes: new { @class = "control-label" })
                            <div class="col-12">
                                @Html.DropDownList("SubscriptionId", null, "--اختر--", new { @class = "form-control", required = "required" })
                                @Html.ValidationMessage("SubscriptionId", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row" id="SubscriptionDiv"></div>
                        </div>
                        <hr />
                        <div class="form-group mb-3 col-sm-6">
                            @Html.Label("تاريخ الالتحاق ", htmlAttributes: new { @class = "control-label" })
                            <div class="col-12">
                                @Html.Editor("JoiningDate", new { htmlAttributes = new { @class = "form-control", @Value = @ViewBag.JoiningDate, type = "date", required = "required" } })
                                @Html.ValidationMessage("JoiningDate", "", new { @class = "text-danger" })
                            </div>
                        </div>
                       

                        <div class="form-group mb-3 col-sm-12">
                            @Html.Label("شيت الاكسيل ", htmlAttributes: new { @class = "control-label" })
                            <div class="col-12">
                                <input type="file" class="form-control" name="upload" id="upload" accept=".xlsx,.xls" required />
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-end">

                        @Url.SubmitCreate()

                    </div>
                </div>
            }
        </div>
    </div>
</div>

<table id="datatable" class="table table-striped dt-responsive  nowrap w-100 table-bordered">
    <thead class="bg-soft-primary">
        <tr>
            <th>
                @Html.DisplayName("الفرع ")
            </th>
            <th>
                @Html.DisplayName("العام الدراسي")
            </th>
            <th>
                @Html.DisplayName("نوع الدراسة")
            </th>
            <th>
                @Html.DisplayName("الصف ")
            </th>

            <th>
                @Html.DisplayName("الفصل ")
            </th>

            <th>
                @Html.DisplayName("الطالب ")
            </th>
            <th>
                @Html.DisplayName("طريقة الاشتراك ")
            </th>
            <th>
                @Html.DisplayName("مبلغ الاشتراك ")
            </th>
            <th>
                @Html.DisplayName("عدد الاقساط ")
            </th>
            <th>
                @Html.DisplayName("تاريخ الالتحاق ")
            </th>
            <th>
                @Html.DisplayName("ملاحظات ")
            </th>
            <th>
                @Html.DisplayName("عمليات")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudyPlaceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudyYearName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudyTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LevelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubscriptionName)
                </td>
                <td>
                    @item.Amount جنيه
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JoiningDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    <a class='btn btn-soft-secondary waves-effect waves-light p-2' href="/StudentsLevelsTransfer/Index?Id=@item.Id" title="نقل الطالب من صف لصف"><i class='fa fa-arrow-alt-circle-up'></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        $("#StudyTypeId").change(function () {
            $.get('/StudentsLevelsTransfer/getLevels', { Id: $("#StudyTypeId").val() }, function (data) {
                $("#LevelId").empty();
                $("#LevelId").append("<option>--اختر--</option>")
                $.each(data, function (key, value) {
                    $("#LevelId").append("<option value=" + value["Id"] + ">" + value["Name"] + "</option>")
                });
            });
        });
        $("#LevelId").change(function () {
            $.get('/StudentsLevelsTransfer/getClasses', { Id: $("#LevelId").val() }, function (data) {
                $("#ClassId").empty();
                $("#ClassId").append("<option>--اختر--</option>")
                $.each(data, function (key, value) {
                    $("#ClassId").append("<option value=" + value["Id"] + ">" + value["Name"] + "</option>")
                });
            });
            $.get('/StudentsLevelsTransfer/getSubscriptions', { Id: $("#LevelId").val() }, function (data) {
                $("#SubscriptionId").empty();
                $("#SubscriptionId").append("<option value=''>--اختر--</option>")
                $.each(data, function (key, value) {
                    $("#SubscriptionId").append("<option value=" + value["Id"] + ">" + value["Name"] + "</option>")
                });
            });
        });
        $("#SubscriptionId").change(function () {
            $.get('/StudentsLevelsTransfer/getSubscriptionsById', { Id: $("#SubscriptionId").val() }, function (data) {
                $("#SubscriptionDiv").empty();

                var now1 = new Date();
                now1.setMinutes(now1.getMinutes() - now1.getTimezoneOffset());
                $.each(data, function (key, value) {
                    var amount = parseInt(value["InstallmentsNumber"]);
                    $("#SubscriptionDiv").append('<hr>');
                    $("#SubscriptionDiv").append('<div class="form-group mb-3 col-sm-12 text-center bg-warning">الاقساط  </div>');
                    $("#SubscriptionDiv").append('<hr>');

                    var j = 1;
                    for (var i = 0; i < amount; i++) {
                        $("#SubscriptionDiv").append('<div class="form-group mb-3 col-sm-6"><label class="control-label">قيمة القسط رقم ' + j + '</label><div class="col-12"><input class="form-control" value=' + value["Amount"] / value["InstallmentsNumber"] + ' id="SubscriptionMethod[' + i + '].Amount" name="SubscriptionMethod[' + i + '].Amount" required /></div></div>')
                        $("#SubscriptionDiv").append('<div class="form-group mb-3 col-sm-6"><label class="control-label">تاريخ القسط رقم ' + j + '</label><div class="col-12"><input class="form-control" value=' + now1.toISOString().slice(0, 10) + ' id="SubscriptionMethod[' + i + '].Date" name="SubscriptionMethod[' + i + '].Date" type="date" required /></div></div>')
                        now1.setMonth(now1.getMonth() + 1);
                        j++;
                    }

                });
            });
        });
    </script>
    <script>
        function excel() {
            $("#exampleModal").modal('show');
        }

    </script>
}