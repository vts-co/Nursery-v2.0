@model IEnumerable<NurseryProject.Dtos.Students.StudentsDto>
@using NurseryProject.Utilities
@{
    ViewBag.Title = "ادارة الطلاب ";

}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">  </h2>
            <p class="col-auto">
                <a href='/Students/Create' class='btn btn-soft-primary  waves-effect waves-light px-4'><i class="fas fa-plus me-3"></i> اضافة طالب جديد</a>
            </p>
            <p class="col-auto">
                <button  onclick="excel()" class='btn btn-soft-primary  waves-effect waves-light px-4'><i class="fas fa-list-alt me-3"></i> استيراد البيانات</button>
            </p>
        </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                @using (Html.BeginForm("ImportExcel", "Students", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="modal-body">
                        <div class="row">
                            <div class="form-group mb-3 col-sm-6">
                                @Html.Label("شيت الاكسيل ", htmlAttributes: new { @class = "control-label" })
                                <div class="col-12">
                                    <input type="file" class="form-control" name="upload" id="upload" accept=".xlsx,.xls" required />
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-end">

                            @Url.SubmitCreate()

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped dt-responsive  nowrap w-100 table-bordered ">
            <thead class="bg-soft-primary">
                <tr>
                    <th>
                        @Html.DisplayName("الكود")
                    </th>
                    <th>
                        @Html.DisplayName("الاسم")
                    </th>
                    @*<th>
                            @Html.DisplayName("الصورة الشخصية")
                        </th>*@
                    <th>
                        @Html.DisplayName("تاريخ الميلاد")
                    </th>
                    <th>
                        @Html.DisplayName("النوع")
                    </th>
                    <th>
                        @Html.DisplayName("حالة الطالب")
                    </th>
                    <th>
                        @Html.DisplayName("اسم الأم")
                    </th>
                    <th>
                        @Html.DisplayName("العنوان")
                    </th>
                    <th>
                        @Html.DisplayName("رقم التليفون")
                    </th>
                    <th>
                        @Html.DisplayName("ملاحظات")
                    </th>
                    <th>
                        @Html.DisplayName("عمليات")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        @*<td>
                                <img src="@item.Image" width="50" />
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.BirthDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GenderName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegistrationTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MotherName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        <td>
                            @Url.Edit(routeValues: new { id = item.Id })
                            @Url.Delete(routeValues: new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function excel() {
            $("#exampleModal").modal('show');
        }
        
    </script>
    }
