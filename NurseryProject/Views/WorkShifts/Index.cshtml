@model IEnumerable<NurseryProject.Dtos.WorkShifts.WorkShiftsDto>
@using NurseryProject.Utilities
@{
    ViewBag.Title = "ادارة فترات العمل ";

}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">  </h2>
            <p class="col-auto">
                @Url.Create()
            </p>
        </div>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped dt-responsive  nowrap w-100 table-bordered">
            <thead class="bg-soft-primary">
                <tr>

                    <th>
                        @Html.DisplayName("مسمي الفترة")
                    </th>
                    <th>
                        @Html.DisplayName("مواعيد الفترة")
                    </th>
                    <th>
                        @Html.DisplayName("ملاحظات")
                    </th>
                    <th>
                        @Html.DisplayName("عمليات")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayName("اليوم ")
                                        </th>
                                        <th>
                                            @Html.DisplayName("من ")
                                        </th>
                                        <th>
                                            @Html.DisplayName("إلي")
                                        </th>

                                    </tr>
                                </thead>
                                @foreach (var item2 in item.ShiftTimes)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem2 => item2.DayName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem2 => item2.TimeFrom)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem2 => item2.TimeTo)
                                        </td>
                                    </tr>

                                }
                            </table>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        <td>
                            @Url.Edit(routeValues: new { id = item.Id })
                            @Url.Delete(routeValues: new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>