@model IEnumerable<NurseryProject.Dtos.Subscriptions.SubscriptionsDto>
@using NurseryProject.Utilities
@{
    ViewBag.Title = "طرق الاشتراكات";
}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">  </h2>
            <p class="col-auto">
                @Url.Create()
            </p>
        </div>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped dt-responsive  nowrap w-100 table-bordered">
            <thead class="bg-soft-primary">
                <tr>
                    <th>
                        @Html.DisplayName("نوع الدراسة")
                    </th>
                    <th>
                        @Html.DisplayName("الصف ")
                    </th>
                    <th>
                        @Html.DisplayName("نوع الاشتراك")
                    </th>
                    @*<th>
                        @Html.DisplayName("المسمي")
                    </th>*@
                    <th>
                        @Html.DisplayName("المبلغ")
                    </th>
                    <th>
                        @Html.DisplayName("عدد الاقساط")
                    </th>
                    @*<th>
                        @Html.DisplayName("قيمة القسط")
                    </th>*@
                    <th>
                        @Html.DisplayName("عمليات")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudyTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubscriptionTypeName)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstallmentsNumber)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.InstallmentAmount)
                    </td>*@
                    <td>
                        @Url.Edit(routeValues: new { id = item.Id })
                        @Url.Delete(routeValues: new { id = item.Id })
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>