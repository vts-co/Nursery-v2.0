@model IEnumerable<NurseryProject.Dtos.EmployeesDiscounts.EmployeesDiscountsDto>
@using NurseryProject.Utilities
@{
    ViewBag.Title = "ادارة خصومات الموظفين ";
}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">  </h2>
            <p class="col-auto">
                @Url.Create()
            </p>
        </div>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped dt-responsive  nowrap w-100">
            <thead class="bg-soft-primary">
                <tr>
                    <th>
                        @Html.DisplayName("نوع الخصم")
                    </th>
                    <th>
                        @Html.DisplayName("اسم الموظف")
                    </th>
                    <th>
                        @Html.DisplayName(" تاريخ الخصم")
                    </th>
                    <th>
                        @Html.DisplayName("قيمة الخصم")
                    </th>
                    <th>
                        @Html.DisplayName("سبب الخصم")
                    </th>

                    <th>
                        @Html.DisplayName("عمليات")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiscountTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </td>
                    <td>
                        @item.Date.Date.ToString("yyyy-MM-dd")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reason)
                    </td>
                    <td>
                        @Url.Edit(routeValues: new { id = item.Id })
                        @Url.Delete(routeValues: new { id = item.Id })
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>