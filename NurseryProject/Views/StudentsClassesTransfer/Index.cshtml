@model IEnumerable<NurseryProject.Dtos.StudentsClassesTransfer.StudentsClassesTransferDto>
@using NurseryProject.Utilities
@{
    ViewBag.Title = "ادارة انتقال طالب من فصل لفصل";
}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">  </h2>
            <p class="col-auto">
                <a href='/StudentsClassesTransfer/Create?StudentClassId=@ViewBag.StudentClass' class='btn btn-soft-primary  waves-effect waves-light px-4'><i class=\"fas fa-plus me-3\"></i> اضافة</a>            </p>
        </div>
    </div>
    <div class="card-body">
        <div class="row mt-3">
           
        </div>
        
        <table id="datatable" class="table table-striped dt-responsive  nowrap w-100">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("الكود ")
                    </th>
                    <th>
                        @Html.DisplayName("الطالب ")
                    </th>
                    <th>
                        @Html.DisplayName("العام الدراسي")
                    </th>
                    <th>
                        @Html.DisplayName("الفرع ")
                    </th>

                    <th>
                        @Html.DisplayName("نوع الدراسة")
                    </th>
                    <th>
                        @Html.DisplayName("الصف الدراسي")
                    </th>
                    <th>
                        @Html.DisplayName("من فصل ")
                    </th>
                    <th>
                        @Html.DisplayName("إلي فصل ")
                    </th>

                    <th>
                        @Html.DisplayName("بتاريخ  ")
                    </th>
                    <th>
                        @Html.DisplayName("ملاحظات ")
                    </th>
                    <th>
                        @Html.DisplayName("عمليات")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudyYearName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudyPlaceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudyTypeName)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassFromName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassToName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    
                    <td>

                        @Url.Delete(routeValues: new { id = item.Id })

                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>
