@model IEnumerable<NurseryProject.Dtos.ClassesLeaders.ClassesLeadersDto>
@using NurseryProject.Utilities
@{
    ViewBag.Title = "ادارة رواد الفصول  ";
}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">  </h2>
            <p class="col-auto">
                @Url.Create()
            </p>
        </div>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped dt-responsive  nowrap w-100">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("مكان الدراسة")
                    </th>
                    <th>
                        @Html.DisplayName("نوع الدراسة")
                    </th>
                    <th>
                        @Html.DisplayName("الصف الدراسي")
                    </th>
                    <th>
                        @Html.DisplayName("الفصل ")
                    </th>
                    <th>
                        @Html.DisplayName("الادارة")
                    </th>
                    <th>
                        @Html.DisplayName("الموظف ")
                    </th>
                    <th>
                        @Html.DisplayName("ملاحظات")
                    </th>
                    <th>
                        @Html.DisplayName("عمليات")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.StudyPlaceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudyTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        @Url.Edit(routeValues: new { id = item.Id })
                        @Url.Delete(routeValues: new { id = item.Id })
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>