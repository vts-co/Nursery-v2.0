@model IEnumerable<NurseryProject.Dtos.Employees.EmployeesDto>
@using NurseryProject.Utilities
@{
    ViewBag.Title = "ادارة الموظفين ";

}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">  </h2>
            <p class="col-auto">
                @Url.Create()
            </p>
        </div>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped dt-responsive  nowrap w-100">
            <thead class="bg-soft-primary">
                <tr>
                    <th>
                        @Html.DisplayName("الكود")
                    </th>
                    <th>
                        @Html.DisplayName("الاسم")
                    </th>
                    @*<th>
                        @Html.DisplayName("الصورة الشخصية")
                    </th>*@
                    <th>
                        @Html.DisplayName("الإدارة")
                    </th>
                    <th>
                        @Html.DisplayName("الوظيفة")
                    </th>

                    <th>
                        @Html.DisplayName("تاريخ التعيين")
                    </th>
                    <th>
                        @Html.DisplayName("العنوان")
                    </th>
                    <th>
                        @Html.DisplayName("رقم التليفون")
                    </th>

                   
                    <th>
                        @Html.DisplayName("عمليات")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @*<td>
                        <img src="@item.Image" width="50" />
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JopName)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.JoiningDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    
                   
                    <td>
                        @Url.Edit(routeValues: new { id = item.Id })
                        @Url.Delete(routeValues: new { id = item.Id })
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>